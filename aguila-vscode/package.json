{
    "name": "aguila-vscode",
    "displayName": "Lenguaje Águila",
    "description": "Soporte para el lenguaje de programación Aguila",
    "version": "2.7.6",
    "publisher": "aguila-lang",
    "author": {
        "name": "Emerson Espinoza",
        "url": "https://github.com/emersonxinay"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/emersonxinay/aguila.git"
    },
    "engines": {
        "vscode": "^1.70.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "icon": "icon.png",
    "main": "./out/extension.js",
    "activationEvents": [
        "onLanguage:aguila"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "16.x",
        "@types/vscode": "^1.70.0",
        "@typescript-eslint/eslint-plugin": "^5.31.0",
        "@typescript-eslint/parser": "^5.31.0",
        "@vscode/test-electron": "^2.1.5",
        "eslint": "^8.20.0",
        "glob": "^8.0.3",
        "mocha": "^10.0.0",
        "typescript": "^4.7.4"
    },
    "contributes": {
        "languages": [
            {
                "id": "aguila",
                "aliases": [
                    "Aguila",
                    "aguila"
                ],
                "extensions": [
                    ".ag"
                ],
                "configuration": "./language-configuration.json",
                "icon": {
                    "light": "./icon.png",
                    "dark": "./icon.png"
                }
            }
        ],
        "grammars": [
            {
                "language": "aguila",
                "scopeName": "source.aguila",
                "path": "./syntaxes/aguila.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "aguila",
                "path": "./snippets/aguila.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Configuración de Águila",
            "properties": {
                "aguila.enableLSP": {
                    "type": "boolean",
                    "default": true,
                    "description": "Habilitar el servidor de lenguaje (LSP) para diagnósticos en tiempo real."
                },
                "aguila.serverPath": {
                    "type": "string",
                    "default": null,
                    "description": "Ruta personalizada al ejecutable 'aguila'. Si se deja vacío, se intentará usar el del PATH o el instalado por la extensión."
                },
                "aguila.trace.server": {
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Nivel de trazas para la comunicación con el servidor LSP."
                }
            }
        },
        "configurationDefaults": {
            "[aguila]": {
                "editor.semanticHighlighting.enabled": true
            },
            "editor.tokenColorCustomizations": {
                "[Agulia]": {
                    "textMateRules": [
                        {
                            "scope": "keyword.control.aguila",
                            "settings": {
                                "foreground": "#FF79C6",
                                "fontStyle": "bold"
                            }
                        },
                        {
                            "scope": "keyword.operator.logical.aguila",
                            "settings": {
                                "foreground": "#FFB86C",
                                "fontStyle": "italic"
                            }
                        },
                        {
                            "scope": "entity.name.function.aguila",
                            "settings": {
                                "foreground": "#50FA7B",
                                "fontStyle": "bold"
                            }
                        },
                        {
                            "scope": "support.class.builtin.aguila",
                            "settings": {
                                "foreground": "#8BE9FD",
                                "fontStyle": "italic"
                            }
                        },
                        {
                            "scope": "support.function.builtin.aguila",
                            "settings": {
                                "foreground": "#8BE9FD"
                            }
                        },
                        {
                            "scope": "string.quoted.double.aguila",
                            "settings": {
                                "foreground": "#F1FA8C"
                            }
                        },
                        {
                            "scope": "constant.numeric.aguila",
                            "settings": {
                                "foreground": "#BD93F9"
                            }
                        },
                        {
                            "scope": "storage.type.aguila",
                            "settings": {
                                "foreground": "#8BE9FD",
                                "fontStyle": "italic"
                            }
                        },
                        {
                            "scope": "constant.language.aguila",
                            "settings": {
                                "foreground": "#FFB86C",
                                "fontStyle": "bold"
                            }
                        },
                        {
                            "scope": "variable.parameter.aguila",
                            "settings": {
                                "foreground": "#FF79C6",
                                "fontStyle": "italic"
                            }
                        },
                        {
                            "scope": "entity.name.type.class.aguila",
                            "settings": {
                                "foreground": "#8BE9FD",
                                "fontStyle": "underline"
                            }
                        },
                        {
                            "scope": "keyword.control.import.aguila",
                            "settings": {
                                "foreground": "#BD93F9",
                                "fontStyle": "italic"
                            }
                        },
                        {
                            "scope": "comment.line.number-sign.aguila",
                            "settings": {
                                "foreground": "#6272A4",
                                "fontStyle": "italic"
                            }
                        },
                        {
                            "scope": [
                                "punctuation.section.embedded.begin.aguila",
                                "punctuation.section.embedded.end.aguila"
                            ],
                            "settings": {
                                "foreground": "#FF5555",
                                "fontStyle": "bold"
                            }
                        },
                        {
                            "scope": "storage.type.string.aguila",
                            "settings": {
                                "foreground": "#BD93F9",
                                "fontStyle": "italic bold"
                            }
                        },
                        {
                            "scope": "variable.interpolated.aguila",
                            "settings": {
                                "foreground": "#FF5555",
                                "fontStyle": "bold"
                            }
                        }
                    ]
                }
            }
        }
    },
    "dependencies": {
        "aguila-lang": "^2.6.3",
        "vscode-languageclient": "^9.0.1"
    }
}
{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "√ÅGUILA",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#comments"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#types"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.aguila",
                    "match": "\\b(si|sino|mientras|para|retornar|importar|asincrono|esperar|nuevo|intentar|capturar|clase|funcion)\\b"
                },
                {
                    "name": "constant.language.aguila",
                    "match": "\\b(verdadero|falso|nulo)\\b"
                },
                {
                    "name": "variable.language.this.aguila",
                    "match": "\\b(this)\\b"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.aguila",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.aguila",
                    "match": "\\\\."
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.aguila",
                    "match": "//.*$"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "entity.name.function.aguila",
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\("
                }
            ]
        },
        "numbers": {
            "name": "constant.numeric.aguila",
            "match": "\\b\\d+(\\.\\d+)?\\b"
        },
        "types": {
            "name": "storage.type.aguila",
            "match": "\\b(numero|texto|logico)\\b"
        }
    },
    "scopeName": "source.aguila"
}
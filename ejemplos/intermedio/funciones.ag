
# Prueba de Funciones

imprimir("--- Iniciando Test de Funciones ---");

# 1. Función Simple
funcion saludar(nombre) {
    retornar "Hola, " + nombre;
}
nombre = leer("Ingrese nombre (Usuario): ");
imprimir(saludar(nombre));

# 2. Función con Múltiples Argumentos
funcion sumar(a, b) {
    retornar a + b;
}
a = leer("Ingrese a (10): ");
b = leer("Ingrese b (20): ");
res = sumar(a, b);
imprimir(a"Suma({a}, {b}) = {res}");

# 3. Recursión (Factorial)
funcion factorial(n) {
    si n <= 1 {
        retornar 1;
    }
    retornar n * factorial(n - 1);
}
n = leer("Ingrese n para factorial (5): ");
imprimir(a"Factorial de {n}: {factorial(n)}");

# 4. Funciones de Orden Superior (Closures/Lambdas no explícitas pero funciones como valor)
funcion operar(a, b, operacion) {
    retornar operacion(a, b);
}
op_a = leer("Ingrese op_a (5): ");
op_b = leer("Ingrese op_b (5): ");
res_op = operar(op_a, op_b, sumar);
imprimir(a"Operar({op_a}, {op_b}, sumar) = {res_op}");

imprimir("--- Fin Test de Funciones ---");

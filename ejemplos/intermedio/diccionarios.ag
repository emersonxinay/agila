# Diccionarios en Águila - Guía Completa

imprimir("=== DICCIONARIOS ===");

# 1. Creación
nombre = leer("Nombre (Ana): ");
edad = leer("Edad (25): ");
persona = {"nombre": nombre, "edad": edad};
imprimir(persona);

# 2. Acceso
imprimir(persona["nombre"]);

# 3. Modificación
edad_nueva = leer("Nueva edad (26): ");
persona["edad"] = edad_nueva;
imprimir(persona["edad"]);

# 4. Agregar
ciudad = leer("Ciudad (Santiago): ");
persona["ciudad"] = ciudad;
imprimir(persona);

# 5. Anidados
config = {"app": "MiApp", "db": {"host": "localhost", "port": 5432}};
imprimir(config["db"]["host"]);

# 6. Tipos mixtos
datos = {"texto": "Hola", "numero": 42, "bool": verdadero};
imprimir(datos);

# 7. Contador
frutas = {"manzanas": 5, "naranjas": 3};
frutas["manzanas"] = frutas["manzanas"] + 2;
imprimir(frutas);

imprimir("=== FIN ===");

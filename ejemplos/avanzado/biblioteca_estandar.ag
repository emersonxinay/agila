
# Prueba de Biblioteca Estándar (Texto y Archivo)

imprimir("--- Iniciando Test de Stdlib ---");

# 1. Texto
imprimir("1. Texto");
texto = leer("Texto (  Hola Mundo  ): ");

# Recortar
trim = texto.recortar();
imprimir("Recortado: '" + trim + "'");

# Mayúsculas / Minúsculas
mayus = trim.mayusculas();
minus = trim.minusculas();
imprimir("Mayúsculas: " + mayus);
imprimir("Minúsculas: " + minus);

# Contiene
buscar = leer("Buscar (Hola): ");
tiene_texto = trim.contiene(buscar);
imprimir("¿Contiene '" + buscar + "'?:");
imprimir(tiene_texto);

# Reemplazar
reemplazar_old = leer("Reemplazar old (Mundo): ");
reemplazar_new = leer("Reemplazar new (Águila): ");
reemplazo = trim.reemplazar(reemplazar_old, reemplazar_new);
imprimir("Reemplazo: " + reemplazo);

# Dividir
dividir_str = leer("Dividir str (a,b,c): ");
dividir_sep = leer("Dividir sep (,): ");
partes = dividir_str.dividir(dividir_sep);
# imprimir("Dividido: " + partes); # Concatenar lista con string puede fallar si no hay toString implícito

# 2. Archivo
imprimir("\n2. Archivo");
importar archivo;

ruta = leer("Ruta archivo (prueba_fs.txt): ");
contenido_escribir = leer("Contenido escribir: ");

# Escribir
imprimir("Escribiendo en '" + ruta + "'...");
archivo.escribir(ruta, contenido_escribir);

# Leer
imprimir("Leyendo archivo...");
contenido_leido = archivo.leer(ruta);
imprimir("Contenido leído:");
imprimir(contenido_leido);

imprimir("--- Fin Test de Stdlib ---");

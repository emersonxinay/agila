
# Prueba de Módulo Matemático

imprimir("--- Iniciando Test de Mate ---");

importar mate;

# 1. Raíz Cuadrada
# 1. Raíz Cuadrada
val_raiz = leer("Raiz de (25): ");
raiz_val = mate.raiz(val_raiz);
imprimir(a"Raíz de {val_raiz}: {raiz_val}");

# 2. Potencia
base = leer("Base (2): ");
exp = leer("Exponente (3): ");
potencia_val = mate.potencia(base, exp);
imprimir(a"{base} elevado a {exp}: {potencia_val}");

# 3. Trigonometría
# Seno de PI/2 (aprox 1.5708) debe ser 1
# Coseno de 0 debe ser 1
val_sen = leer("Seno de (1.570796): ");
val_cos = leer("Coseno de (0): ");
seno_val = mate.sen(val_sen);
cos_val = mate.cos(val_cos);
imprimir(a"Seno({val_sen}): {seno_val}");
imprimir(a"Coseno({val_cos}): {cos_val}");

# 4. Redondeo
val_piso = leer("Piso de (4.9): ");
val_techo = leer("Techo de (4.1): ");
piso_val = mate.piso(val_piso);
techo_val = mate.techo(val_techo);
imprimir(a"Piso({val_piso}): {piso_val}");
imprimir(a"Techo({val_techo}): {techo_val}");

# 5. Aleatorio
rand1 = mate.aleatorio();
rand2 = mate.aleatorio();
imprimir(a"Aleatorio 1: {rand1}");
imprimir(a"Aleatorio 2: {rand2}");

# 6. Rango (si está implementado como función que retorna lista)
# mate.rango(inicio, fin)
rango_ini = leer("Rango inicio (1): ");
rango_fin = leer("Rango fin (5): ");
lista_rango = mate.rango(rango_ini, rango_fin);
imprimir(a"Rango({rango_ini}, {rango_fin}): {lista_rango}");

imprimir("--- Fin Test de Mate ---");

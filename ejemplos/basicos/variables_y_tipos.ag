
# Prueba de Fundamentos: Variables y Tipos

imprimir("--- Iniciando Test de Fundamentos ---");

# 1. Enteros y Operaciones
a = leer("Ingrese a (entero): ");
b = leer("Ingrese b (entero): ");
imprimir(a"Suma ({a}+{b}): {a + b}");
imprimir(a"Resta ({a}-{b}): {a - b}");
imprimir(a"Multiplicación ({a}*{b}): {a * b}");
imprimir(a"División ({a}/{b}): {a / b}");

# 2. Flotantes
pi = 3.14159;
radio = leer("Ingrese radio (float): ");
area = pi * (radio * radio);
imprimir(a"Área círculo (r={radio}): {area}");

# 3. Cadenas (Strings)
nombre = leer("Ingrese nombre: ");
saludo = "Hola " + nombre;
imprimir(saludo);

# 4. Interpolación
mensaje = a"Bienvenido a {nombre} v2.0";
imprimir(mensaje);

# 5. Booleanos
es_verdadero = leer("Ingrese booleano verdadero: ");
es_falso = leer("Ingrese booleano falso: ");

si es_verdadero {
    imprimir("Verdadero funciona");
}

si no es_falso {
    imprimir("Negación funciona");
}

imprimir("--- Fin Test de Fundamentos ---");
